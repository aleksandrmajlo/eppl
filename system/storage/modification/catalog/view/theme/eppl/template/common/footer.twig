<footer class="footer block-with-lazy">
    <div class="container">
        <div class="row">
            <div class="footer__topLine d-lg-none">
                <div class="footer__logo">
                    <picture class="lazy">
                        <source srcset="#" data-srcset="/catalog/view/theme/eppl/img/@2x/webp/logo-descr.webp"
                                type="image/webp"/>
                        <img src="#" data-src="/catalog/view/theme/eppl/img/@2x/logo-descr.png" alt="logo"/>
                    </picture>
                </div>
                <div class="footer__mnu">
                    <div class="footer__text">
                        Меню
                    </div>
                    <div class="toggle-menu-mobile toggle-menu-mobile--js"><span></span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="messengers">
                    {% if config_whatsapp is not empty %}
                        <a class="messengers__item" target="_blank" href="{{ config_whatsapp }}">
                            <svg class="icon icon-whatsapp ">
                                <use xlink:href="/catalog/view/theme/eppl/img/svg/sprite.svg#whatsapp"></use>
                            </svg>
                        </a>
                    {% endif %}
                    {% if config_viber is not empty %}
                        <a class="messengers__item" target="_blank" href="{{ config_viber }}">
                            <svg class="icon icon-viber ">
                                <use xlink:href="/catalog/view/theme/eppl/img/svg/sprite.svg#viber"></use>
                            </svg>
                        </a>
                    {% endif %}
                    {% if config_telegram is not empty %}
                        <a class="messengers__item" target="_blank" href="{{ config_telegram }}">
                            <svg class="icon icon-telegram ">
                                <use xlink:href="/catalog/view/theme/eppl/img/svg/sprite.svg#telegram"></use>
                            </svg>
                        </a>
                    {% endif %}
                </div>
                <a class="footer__tel" href="tel:{{ telephone }}">{{ telephone }}</a>
                <div class="footer__schedule">{{ config_open }}</div>
                <div class="soc">
                    {% if config_fb is not empty %}
                        <a class="soc__item" href="{{ config_fb }}" target="_blank">
                            <svg class="icon icon-fb ">
                                <use xlink:href="/catalog/view/theme/eppl/img/svg/sprite.svg#fb"></use>
                            </svg>
                        </a>
                    {% endif %}
                    {% if config_vk is not empty %}
                        <a class="soc__item" href="{{ config_vk }}" target="_blank">
                            <svg class="icon icon-vk ">
                                <use xlink:href="/catalog/view/theme/eppl/img/svg/sprite.svg#vk"></use>
                            </svg>
                        </a>
                    {% endif %}
                    {% if config_instagram is not empty %}
                        <a class="soc__item" href="{{ config_instagram }}" target="_blank">
                            <svg class="icon icon-instagram ">
                                <use xlink:href="/catalog/view/theme/eppl/img/svg/sprite.svg#instagram"></use>
                            </svg>
                        </a>
                    {% endif %}
                    {% if config_youtube is not empty %}
                        <a class="soc__item" href="{{ config_youtube }}" target="_blank">
                            <svg class="icon icon-youtube ">
                                <use xlink:href="/catalog/view/theme/eppl/img/svg/sprite.svg#youtube"></use>
                            </svg>
                        </a>
                    {% endif %}
                </div>
                <div class="footer__polite">&copy;&nbsp;<span class="curentYear"></span> {{ config_meta_description }}
                </div>
            </div>
            <!-- footer menu -->

            {% if footer_titles %}
	               {% for footer_title in footer_titles %}
		            <div class="col-lg-3 d-none d-lg-block">
		             	<a href="#" class="footer__title" onclick="return false;" >{{ footer_title.title }}</a>
			            {% if footer_title.sub_title %}
				       <ul class="footer__nav">
				        	{% for subtitle in footer_title.sub_title  %}
					        	{% if subtitle.href %}
					     	      <li><a href="{{ subtitle.href }}">{{ subtitle.title }}</a></li>
						        {% else %}
						            <li><a href="{{ subtitle.link }}">{{ subtitle.title }}</a></li>
						        {% endif %}
					       {% endfor %}
				        </ul>
			{% endif %}
		     </div>
	       {% endfor %}
         {% endif %}


		


        </div>
    </div>
</footer>

</div>

{% for script in scripts %}
    <script src="{{ script }}" type="text/javascript"></script>
{% endfor %}

<script src="catalog/view/theme/eppl/js/lazy.js"></script>

<script src="catalog/view/theme/eppl/libs/ion-rangeslider/js/ion.rangeSlider.min.js"></script>
<script src="catalog/view/theme/eppl/libs/inputmask/inputmask.min.js"></script>
