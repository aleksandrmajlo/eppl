{{ header }}
<div class="pageHead">
  <div class="pageHead__wrap">
    <div class="container">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb" itemscope="itemscope" itemtype="http://schema.org/BreadcrumbList">
          {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumb-item">
              <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
            </li>
          {% endfor %}
        </ol>
      </nav>
    </div>
  </div>
</div>
{{ content_top }}
<section class="sLK section" id="sLK">
  <div class="container">
    <div class="row">

      <div class="sLK__col col-lg-3">
        <div class="section-title section-title--bonuses d-lg-none">
          <h1>{{ heading_title }}</h1>
        </div>
        {{ column_left }}
      </div>

      <div class="col">

        <div class="section-title section-title--bonuses d-none d-lg-block">
          <h1>{{ heading_title }}</h1>
          {{ text_message }}
          <div class="buttons">
            <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
          </div>
        </div>

      </div>

    </div>
  </div>
</section>
{{ column_right }}
{{ content_bottom }}
{{ footer }}