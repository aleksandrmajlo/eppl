{% if categories %}
    <section class="sPopularPosition section" id="sPopularPosition">
        <div class="container">
            <div class="section-title text-center">
                <h2>{{ name }}</h2>
            </div>
            <div class="row">
                {% for category in categories  %}
                    <div class="col-6 col-lg-3">
                        <a class="popularCategoryItem" href="{{ category.href }}">
                            {% if category.thumb  %}
                                <picture class="lazy">
                                    <img src="#" data-src="{{  category.thumb  }}" alt="{{ category.name }}"/>
                                </picture>
                            {% endif %}
                            <span class="popularCategoryItem__title">{{ category.name }}</span>
                            <span class="popularCategoryItem__price">від {{ category.price_min }} грн</span></a>
                    </div>
                {% endfor %}
            </div>

{#            <a class="sPopularPosition__allCategory" href="#">#}
{#                <span></span>Смотреть все товары#}
{#            </a>#}

        </div>
    </section>
{% endif %}
