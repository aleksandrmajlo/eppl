{{ header }}
<div class="pageHead">
    <div class="pageHead__wrap">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb" itemscope="itemscope" itemtype="http://schema.org/BreadcrumbList">
                    {% for breadcrumb in breadcrumbs %}
                        <li class="breadcrumb-item">
                            <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
                        </li>
                    {% endfor %}
                </ol>
            </nav>
        </div>
    </div>
</div>
<section class="sLK section" id="sLK">
    <div class="container">
        <div class="row">

            <div class="sLK__col col-lg-3">
                <div class="section-title section-title--bonuses d-lg-none">
                    <h1>{{ heading_title }}</h1>
                </div>
                {{ column_left }}
            </div>

            <div class="col">
                <div class="sLK__wrap">

                    <div class="section-title section-title--order d-none d-lg-block">
                        <h1>{{ heading_title }}</h1>
                    </div>
                    {% if orders %}
                        <div class="sLK__order">

                            <div class="sLK__tableWrap">
                                <table >
                                    <tr>
                                        <th>{{ column_order_id }}</th>
                                        <th>{{ column_date_added }}</th>
                                        <th>{{ column_total }}</th>
                                        <th>{{ column_status }}</th>
                                        <th></th>
                                    </tr>
                                    {% for order in orders %}
                                        <tr>
                                            <td >#{{ order.order_id }}</td>
                                            <td>{{ order.date_added }}</td>
                                            <td >{{ order.total }}</td>
                                            <td>{{ order.status }}</td>
                                            <td >
                                                <a href="{{ order.view }}"  title="{{ button_view }}" class="btn btn-info">
                                                    Перегляд
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </table>
                            </div>



                            <div class="col-sm-6 text-left">{{ pagination }}</div>
                            <div class="col-sm-6 text-right">{{ results }}</div>

                        </div>
                    {% else %}
                        <p>{{ text_empty }}</p>
                    {% endif %}



                </div>
            </div>

        </div>
    </div>
</section>
{{ content_bottom }}
{{ footer }}
