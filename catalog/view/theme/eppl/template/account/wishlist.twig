{{ header }}
<div class="pageHead">
  <div class="pageHead__wrap">
    <div class="container">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb" itemscope="itemscope" itemtype="http://schema.org/BreadcrumbList">
          {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumb-item">
              <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
            </li>
          {% endfor %}
        </ol>
      </nav>
    </div>
  </div>
</div>

{{ content_top }}
<section class="sLK section" id="sLK">
  <div class="container">
    <div class="row">

      <div class="sLK__col col-lg-3">
        <div class="section-title section-title--bonuses d-lg-none">
          <h1>{{ heading_title }}</h1>
        </div>
        {{ column_left }}
      </div>

        <div class="col" id="account-wishlist">
            {% if success %}
                <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endif %}
            <div class="sLK__wrap">

                <div class="section-title section-title--bonuses d-none d-lg-block">
                    <h1>{{ heading_title }}</h1>
                </div>
                <div class="row">
                    {% if products %}
                        {% for product in products %}
                            <div class="col-6 col-lg-4">
                                <div class="productItem">
                                    <div class="productItem__heart" tabindex="0">
                                        <a href="{{ product.remove }}" title="{{ button_remove }}">
                                            <svg class="icon icon-heart ">
                                                <use xlink:href="/catalog/view/theme/eppl/img/svg/sprite.svg#heart"></use>
                                            </svg>
                                        </a>

                                    </div>
                                    <a href="{{ product.href }}">
                                        <!-- picture-->
                                        <picture class="lazy">
                                            <img src="#" data-src="{{ product.thumb }}" alt=""/>
                                        </picture>
                                        <!-- /picture-->
                                    </a>
                                    <a class="productItem__name" href="{{ product.href }}">{{ product.name }}</a>
                                    <div class="productItem__price">
                                        {% if product.price %}
                                            {% if not product.special %}
                                                    {{ product.price }}
                                                {% else %}
                                                    <b>{{ product.special }}</b>
                                                    <s>{{ product.price }}</s>
                                            {% endif %}
                                        {% endif %}
                                    </div>
{#                                    <div class="productItem__delivery">Доставка</div>#}
                                     <a class="productItem__btnBuy"  onclick="cart.add('{{ product.product_id }}');return false;" href="#">{{ button_cart }}</a>
                                     <a class="productItem__oneClick" onclick="cart.oneclick({{ product_id }});return false;" href="#">Купити в 1 клік</a>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p>{{ text_empty }}</p>
                    {% endif %}

                </div>

            </div>
        </div>

    </div>

  </div>
</section>
{{ column_right }}
{{ content_bottom }}
{{ footer }}